{
  "functions": [
    {
      "source": "functions",
      "codebase": "default"
    },
    {
      "source": "algolia-firestore",
      "codebase": "algolia-firestore",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "extensions": {
    "firestore-algolia-search": "."
  }
}
